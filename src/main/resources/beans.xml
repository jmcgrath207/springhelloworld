<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd" default-init-method="init" default-destroy-method="destory">
<bean id="person" class="com.johnmcgrath.springhelloworld.Person" scope="singleton" init-method="onCreate" destroy-method="onDestory" factory-method="getInstance">
    <constructor-arg value="777" name="id" type="int" >
    </constructor-arg>
    <constructor-arg value="Mary" name="name" type="java.lang.String">
    </constructor-arg>
    <property name="taxId" value="321"></property>
    <property name="address" ref="address"></property>
</bean>


    <bean id="person2" class="com.johnmcgrath.springhelloworld.Person" scope="singleton" init-method="onCreate" destroy-method="onDestory" factory-bean="personfactory" factory-method="createPerson">
        <constructor-arg value="654" name="id" type="int" >
        </constructor-arg>
        <constructor-arg value="Mike" name="name" type="java.lang.String">
        </constructor-arg>
        <property name="taxId" value="321"></property>
        <property name="address" ref="address"></property>
    </bean>

    <bean id="address" class="com.johnmcgrath.springhelloworld.Address">
        <constructor-arg name="street" value="1 Church Lane"></constructor-arg>
        <constructor-arg name="postcode" value="9876"></constructor-arg>
    </bean>

    <bean id="address2" class="com.johnmcgrath.springhelloworld.Address" p:street="23 Vinyard Lane" p:postcode="6789">

    </bean>

<bean id="personfactory" class="com.johnmcgrath.springhelloworld.PersonFactory"></bean>


</beans>